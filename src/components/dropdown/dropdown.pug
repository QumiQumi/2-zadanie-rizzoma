	var items= [
				{value:"car", text:"Сколько гостей"},
				{value:"car", text:"Dominus"},
				{value:"shit", text:"Gizmo"}
			]
mixin dropdown(options="")
	.dropdown(multiple=options.multiple)
		.dropdown__name(data-after="keyboard_arrow_down") Сколько гостей
		.dropdown__list
			each item in options.items
				div(value=item.value, minItems=item.minItems, maxItems=item.maxItems).dropdown__item
					span #{item.text}
					.dropdown__switcher
						.dropdown__minus -
						.dropdown__number 
							span 0
						.dropdown__plus +
			.dropdown__toolbar
				.dropdown__clear
					h3 Очистить
				.dropdown__apply 
					h3 Применить

					
